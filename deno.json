{
  "tasks": {
    "assets": "deno run -A ./write_assets.ts",
    "cache": "deno cache --lock=deps-lock.json --lock-write --import-map=import_map.json deps.ts"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "singleQuote": false,
      "useTabs": false,
      "proseWrap": "preserve"
    },
    "files": {
      "exclude": [
        "./assets",
        "./lib/assets.ts"
      ]
    }
  },
  "importMap": "./import_map.json",
  "lock": "deps-lock/json"
}
